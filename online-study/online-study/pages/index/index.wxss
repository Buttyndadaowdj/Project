/* pages/index/index.wxss */

.Swiper{
  position: relative;
}
.Swiper_image{
  width: 100%;
}
.Swiper_content{
  position: relative;
  width: 100%;
  height: 400rpx;
}
.Swiper_text{
  position: absolute;
  left: 40rpx;
  bottom: 100rpx;
  color: white;
  font-size: 40rpx;
 
  width: 90%;
  height: 100rpx;
  background-color: gainsboro;
}
.Swiper_lable{
  position: absolute;
  right: 20rpx;
  font-size: 20rpx;
  color: black;
  border-radius: 5rpx;
  top: 30rpx;
  width: 80rpx;
  height: 30rpx;
  background-color: red;
}
.Content_title{
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  background: red;
}