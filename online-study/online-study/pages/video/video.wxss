.all {
  margin: 0 20rpx;
  /* background: rgba(224, 224, 224, 0.459); */
}

.Video_window {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.Video_title {
  font-size: 50rpx;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
  font-family: "STHupo";
}

.Video_comments {
  text-indent: 2rem;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.Class_list .The_title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.Class_list .The_list {
  text-indent: 1rem;
  font-family: "Lantinghei SC";
}

.Class_list .The_list view {
  margin-bottom: 15rpx;
}

.theButton {
  display: flex;
  position: fixed;
  justify-content: space-between;
  bottom: 0;
}

.theButton button {
  width: 200rpx;
  height: 100rpx;
  margin-right: 50rpx;
  position: relative;
}

.theButton button:nth-child(1) image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}
